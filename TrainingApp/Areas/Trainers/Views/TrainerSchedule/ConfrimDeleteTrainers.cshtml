@using TrainingApp.Models
@model Trainer
@{
    ViewData["Title"] = "Confirm Delete Trainers ";
}

<h1>Confirm Delete Trainers</h1>

<div asp-validation-summary="All" class="text-danger"></div>
@{ 
    // Warning Label
}

<form asp-controller="TrainerSchedule" asp-action="DeleteTrainer" method="post">

    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <label>First Name:</label>
        <input readonly asp-for="firstName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Last Name:</label>
        <input readonly asp-for="lastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Sports Type:</label>
        <input readonly asp-for="sportType" class="form-control" />
    </div>

    <button type="submit" class="btn-primary">Delete Trainer</button>
</form>
