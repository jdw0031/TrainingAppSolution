@using TrainingApp.ViewModel
@model AddTrainersViewModel
@{
    ViewData["Title"] = "Add Trainers";
}

<h1>Add Trainers</h1>

<div asp-validation-summary="All" class="text-danger"></div>
@{ 
    // Warning label
}

<form asp-controller="TrainerSchedule" asp-action="AddTrainers" method="post">
    <div class="form-group">
        <label>First Name:</label>
        <input asp-for="firstName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Last Name:</label>
        <input asp-for="lastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Sports Type:</label>
        <select asp-for="sportType" class="form-control">
            <option value="null">None</option>
            <option value="Basketball">Basketball</option>
            <option value="Soccer">Soccer</option>
            <option value="Football">Football</option>
        </select>
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone Number:</label>
        <input asp-for="phoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input asp-for="passWord" class="form-control" />
    </div>
    <div class="form-group">
        <label>Schedule Start Date and Time</label>
        <input asp-for="StartDateTime" class="form-control" />

    </div>
    <div class="form-group">
        <label>Schedule End Date and Time</label>
        <input asp-for="EndDateTime" class="form-control" />

    </div>

    <button type="submit" class="btn-primary">Add Trainer</button>
</form>
