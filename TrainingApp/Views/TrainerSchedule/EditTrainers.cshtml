@using TrainingApp.Models.TrainerModel
@model Trainer
@{
    ViewData["Title"] = "Edit Trainers";
}

<h1>Edit Trainers</h1>

<div asp-validation-summary="All" class="text-danger"></div>
@{ 
    // Warning Label
}

<form asp-controller="TrainerSchedule" asp-action="EditTrainers" method="post">

    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <label>First Name:</label>
        <input asp-for="firstName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Last Name:</label>
        <input asp-for="lastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Sports Type:</label>
        <select asp-for="sportType" class="form-control">
            <option value="null">None</option>
            <option value="Basketball">Basketball</option>
            <option value="Soccer">Soccer</option>
            <option value="Football">Football</option>
        </select>
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone Number:</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <button type="submit" class="btn-primary">Edit Trainer</button>
</form>
